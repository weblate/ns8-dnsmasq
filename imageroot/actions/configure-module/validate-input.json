{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://schema.nethserver.org/dnsmasq/configure-module.json",
    "title": "Configure dnsmasq",
    "description": "Configure dnsmasq module",
    "type": "object",
    "properties": {
        "interface": {
            "description": "Network interface, a list is provided by the 'get-available-interfaces' action",
            "type": "string"
        },
        "dhcp-server": {
            "description": "Defines DHCP server configuration",
            "type": "object",
            "properties": {
                "enabled": {
                    "description": "Enable DHCP server",
                    "type": "boolean"
                },
                "start": {
                    "type": "string"
                },
                "end": {
                    "type": "string"
                },
                "lease": {
                    "description": "Lease time in hours",
                    "type": "integer",
                    "minimum": 1
                }
            },
            "if": {
                "properties": {
                    "enabled": {
                        "const": true
                    }
                }
            },
            "then": {
                "properties": {
                    "start": {
                        "format": "ipv4"
                    },
                    "end": {
                        "format": "ipv4"
                    }
                }
            },
            "required": [
                "enabled",
                "start",
                "end",
                "lease"
            ]
        },
        "dns-server": {
            "description": "Defines DNS server configuration",
            "type": "object",
            "properties": {
                "enabled": {
                    "type": "boolean",
                    "description": "Enable DNS server"
                },
                "primary-server": {
                    "description": "Primary DNS server",
                    "type": "string"
                },
                "secondary-server": {
                    "description": "Secondary DNS server",
                    "type": "string"
                }
            },
            "if": {
                "properties": {
                    "enabled": {
                        "const": true
                    }
                }
            },
            "then": {
                "properties": {
                    "primary-server": {
                        "oneOf": [
                            {
                                "format": "ipv4"
                            },
                            {
                                "format": "ipv6"
                            }
                        ]
                    },
                    "secondary-server": {
                        "oneOf": [
                            {
                                "format": "ipv4"
                            },
                            {
                                "format": "ipv6"
                            },
                            {
                                "maxLength": 0
                            }
                        ]
                    }
                }
            },
            "required": [
                "enabled",
                "primary-server",
                "secondary-server"
            ]
        }
    },
    "required": [
        "interface",
        "dhcp-server",
        "dns-server"
    ]
}
