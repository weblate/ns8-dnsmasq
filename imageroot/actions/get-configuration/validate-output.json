{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "$id": "http://schema.nethserver.org/dnsmasq/get-configuration.json",
    "title": "Configuration of dnsmasq",
    "description": "Retrieve the configuration of dnsmasq.",
    "type": "object",
    "properties": {
        "interface": {
            "description": "Network interface, a list is provided by the 'get-available-interfaces' action",
            "type": "string"
        },
        "dhcp-server": {
            "description": "Defines DHCP server configuration",
            "type": "object",
            "properties": {
                "enabled": {
                    "description": "Enable DHCP server",
                    "type": "boolean"
                },
                "start": {
                    "type": "string",
                    "oneOf": [
                        {
                            "format": "ipv4"
                        },
                        {
                            "maxLength": 0
                        }
                    ]
                },
                "end": {
                    "type": "string",
                    "oneOf": [
                        {
                            "format": "ipv4"
                        },
                        {
                            "maxLength": 0
                        }
                    ]
                },
                "lease": {
                    "description": "Lease time in hours",
                    "type": "integer",
                    "minimum": 1
                }
            },
            "required": [
                "enabled",
                "start",
                "end",
                "lease"
            ]
        },
        "dns-server": {
            "description": "Defines DNS server configuration",
            "type": "object",
            "properties": {
                "enabled": {
                    "type": "boolean",
                    "description": "Enable DNS server"
                },
                "primary-server": {
                    "description": "Primary DNS server",
                    "type": "string",
                    "oneOf": [
                        {
                            "format": "ipv4"
                        },
                        {
                            "format": "ipv6"
                        },
                        {
                            "maxLength": 0
                        }
                    ]
                },
                "secondary-server": {
                    "description": "Secondary DNS server",
                    "type": "string",
                    "oneOf": [
                        {
                            "format": "ipv4"
                        },
                        {
                            "format": "ipv6"
                        },
                        {
                            "maxLength": 0
                        }
                    ]
                }
            },
            "required": [
                "enabled",
                "primary-server",
                "secondary-server"
            ]
        },
        "is_dns_enabled": {
            "description": "True if dnsmasq is configured",
            "type": "boolean"
        },
        "is_dns_bound": {
            "description": "True if DNS servers are bound to the interface",
            "type": "boolean"
        }
    },
    "required": [
        "interface",
        "dhcp-server",
        "dns-server",
        "is_dns_enabled",
        "is_dns_bound"
    ]
}
